@model CmsProjectClient.ViewModels.LoginViewModel
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">

<body>
    <div class="row justify-content-center align-items-center" style="height: 60vh; display: flex; background-color: rgba(255, 255, 255, 0.8);">
        <div class="col-md-6">
            <div class="col-md-12">
                <form class="form" asp-action="Index" asp-controller="Login" method="post">
                    <h3 class="text-center">Login</h3>
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    <div class="form-group">
                        <label class="form-label">Email</label><br>
                        <input required type="email" asp-for="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Password</label><br>
                        <input required type="password" asp-for="Password" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-md" value="Login">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
